<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recycler_checkout"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/checkout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="#605f5f"
        />
    <ImageView
        android:id="@+id/tataimg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/salt"/>
    <TextView
        android:id="@+id/imgname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tata Salt, 1kg"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:text="Price:"/>
        <TextView
            android:id="@+id/price18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rs.18"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="#fa380c"/>
        </LinearLayout>
    <TextView
        android:id="@+id/instock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:text="In Stock"
    android:textColor="#0cb109"
    />
    <TextView
        android:id="@+id/cahon_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Cash On Delivery Available"
        />
<RadioButton
    android:id="@+id/Express_delivery"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:text="Express Delivery(Additional charges upto Rs.100"/>
    <RadioButton
        android:id="@+id/standard_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Standard Delivery"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_weight="1.2"
            android:gravity="end">

            <!--<ImageView

            android:id="@+id/img_sub"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:clickable="true"
            android:visibility="gone"
            app:srcCompat="@drawable/minus" />-->
            <TextView
                android:id="@+id/item_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"

                android:background="@drawable/circle_bg"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="-"
                android:textColor="#008000"
                android:textSize="22sp"
                android:textStyle="normal"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/textMenuName"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium"
                android:visibility="invisible" />

            <!--<ImageView
            android:id="@+id/img_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_weight="1"
            android:clickable="true"
            app:srcCompat="@drawable/plus" />-->
            <TextView
                android:id="@+id/item_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/circle_red"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="+"
                android:textColor="#ff0000"
                android:textSize="22sp"
                android:textStyle="normal" />

        </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_marginRight="10dp"
            android:background="@drawable/oval1"/>

    </LinearLayout>
</LinearLayout>

</ScrollView>